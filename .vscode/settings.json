{
    "files.exclude": {
        "**/*.log": true,
        "**/*.out": true,
        "**/*.run.xml": true
    },
    "files.associations": {
        "*.js": "javascriptreact",
        "iostream": "cpp",
        "type_traits": "cpp",
        "__bit_reference": "cpp",
        "__bits": "cpp",
